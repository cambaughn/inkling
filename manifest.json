{
  "manifest_version": 3,
  "name": "Inkling",
  "version": "1.0.0",
  "actions": {
    "default_title": "Popup",
    "default_popup": "index.html",
    "default_icon": "logo192.png"
  },
  "icons": {},
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content-script/src/main.jsx"]
    }
  ],
  "background": {
    "service_worker": "background/background.js",
    "persistent": false,
    "event": [
      {
        "urls": ["*://*.youtube.com/*"],
        "types": ["main_frame"]
      }
    ]
  },
  "permissions": [
    "activeTab",
    "tabs",
    "runtime"
  ],
  "web_accessible_resources": [
    {
      "resources": [ "logo.png" ],
      "matches": [ "https://*/*" ]
    }
  ]
}
