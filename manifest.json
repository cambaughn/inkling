{
  "manifest_version": 3,
  "name": "Inkling",
  "version": "1.1",
  "actions": {
    "default_title": "Popup",
    "default_popup": "index.html",
    "default_icon": "logo192.png"
  },
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content-script/src/main.jsx"]
    }
  ],
  "background": {
    "service_worker": "background/background.js",
    "persistent": false,
    "event": [
      {
        "urls": ["*://*.youtube.com/*"],
        "types": ["main_frame"]
      }
    ]
  },
  "permissions": [
    "tabs",
    "runtime",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [ "logo.png" ],
      "matches": [ "https://*/*" ]
    }
  ],
  "env": {
    "OPENAI_API_KEY": "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"
  }
}
